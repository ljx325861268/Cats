<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id_name"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center"
                android:text="Name"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="351dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_discribution"
                    android:layout_width="274dp"
                    android:layout_height="351dp"
                    android:layout_weight="1"
                    android:text="Describution" />

                <ImageView
                    android:id="@+id/id_image"
                    android:layout_width="241dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

            </LinearLayout>

            <TextView
                android:id="@+id/id_weight"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Weight"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/id_temperament"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Temperament" />

            <TextView
                android:id="@+id/id_origin"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:text="Origin" />

            <TextView
                android:id="@+id/id_lifespan"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Life Span" />

            <TextView
                android:id="@+id/id_wiki"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:text="Wikipedia link" />

            <TextView
                android:id="@+id/id_dogfriendliness"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:text="Dog Friendliness" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>